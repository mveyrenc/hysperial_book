.hero.is-fullheight
  .hero-body.is-justify-content-center.is-align-items-center
    .columns.is-flex.is-flex-direction-column.box
      .column
        h1.title
          = t('.forgot_your_password')
      .column
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = devise_error_messages!
          .field
            = f.label :email, class: 'label'
            .control
              = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input'
          .field
            .control
              = f.submit t('.send_me_reset_password_instructions'), class: 'button is-primary is-fullwidth'
      .column
        = render "devise/shared/links"
